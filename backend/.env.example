# Backend environment example
# Copy this to backend/.env and fill values before running

# MongoDB connection string (MongoDB Atlas recommended)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/sed?retryWrites=true&w=majority

# URL where the client runs (used for CORS)
CLIENT_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# Optional: other vars used by the backend
#JWT_SECRET=your_jwt_secret_here
#AWS_S3_BUCKET=your-s3-bucket
#GEMINI_API_KEY=...
# Server
NODE_ENV=development
PORT=3001

# MongoDB
MONGODB_URI=mongodb://admin:password@localhost:27017/sed?authSource=admin
MONGO_USER=admin
MONGO_PASSWORD=password
MONGO_DB=sed

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=no-reply@sed-academy.com
FROM_NAME=SED Tech Academy

# Frontend URL (for password reset links, etc.)
FRONTEND_URL=http://localhost:3000

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=your_aws_region

# Razorpay (for payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Google OAuth (if using Google login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub Actions Deployment (if using CI/CD)
SSH_HOST=your_server_ip
SSH_USERNAME=deploy
SSH_PRIVATE_KEY=your_ssh_private_key
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_token
